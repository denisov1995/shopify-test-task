{% schema %}
{
  "name": "Services Section",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Services"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "service_column",
      "name": "Service Column",
      "settings": [
        {
          "type": "text",
          "id": "column_title",
          "label": "Column Title",
          "default": "Transaction Support"
        },
        {
          "type": "textarea",
          "id": "items_list",
          "label": "Items (one per line)",
          "default": "Renewable Natural Gas offi ales\nRIN, RTC, REC and LCFS brokerage\nRenewable PPA origination\nContract negotiations and structuring",
          "info": "Enter each item on a new line"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services Columns",
      "blocks": [
        {
          "type": "service_column",
          "settings": {
            "column_title": "Transaction Support",
            "items_list": "Renewable Natural Gas offi ales\nRIN, RTC, REC and LCFS brokerage\nRenewable PPA origination\nContract negotiations and structuring"
          }
        },
        {
          "type": "service_column",
          "settings": {
            "column_title": "Enterprise Strategy",
            "items_list": "Market advisory\nRisk management\nCapital sourcing or deployment\nResource optimization"
          }
        },
        {
          "type": "service_column",
          "settings": {
            "column_title": "Market Development",
            "items_list": "New venture strategy\nGo-to-market architecture\nM&A support\nMarketing and partnerships"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{{ 'mission.css' | asset_url | stylesheet_tag }}

<section id="mission" class="mission-section">
  <div class="container">
    <h2 class="mission-title">{{ section.settings.title }}</h2>
    <div class="mission-indent"></div>
    <div class="mission-content">
      <img
        class="mission-image"
        src="{{ section.settings.image | img_url: 'original' }}"
        alt="Mission Image"
      >
      <p class="mission-text">{{ section.settings.description }}</p>
    </div>

    <div class="mission-info-cards">
      {% for block in section.blocks %}
        <div class="mission-info-card">
          <img
            width="100px"
            height="100px"
            class="mission-info-image"
            src="{{ block.settings.column_image | img_url }}"
            alt="{{ block.settings.column_title }}"
          >
          <p class="mission-info-title">{{ block.settings.column_title }}</p>
          <p class="mission-info-subtitle">{{ block.settings.column_subtitle }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
